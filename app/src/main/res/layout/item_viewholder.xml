<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.r21nomi.qiitaclientandroid.model.entity.Item" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.r21nomi.qiitaclientandroid.ui.view.CustomFontTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ItemStyle.Title"
            android:text="@{item.title}"
            app:fontType="bold"/>

        <com.r21nomi.qiitaclientandroid.ui.view.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ItemStyle.Body"
            android:text="@{item.rendered_body}"/>
    </LinearLayout>
</layout>